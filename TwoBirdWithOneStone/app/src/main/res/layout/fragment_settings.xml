<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E2E2E2"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="설정"

            android:textSize="15dp" />


        <Switch
            android:id="@+id/switch_lock_screen"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:checked="true"
            android:paddingLeft="10dp"
            android:text="잠금화면 설정"
            android:textSize="20dp" />

        <Switch
            android:id="@+id/switch_make_vibration"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:checked="false"
            android:paddingLeft="10dp"
            android:text="잠금해제 시 진동"
            android:textSize="20dp">

        </Switch>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="알림"

            android:textSize="15dp" />

        <Switch
            android:id="@+id/switch_news"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:checked="true"
            android:paddingLeft="10dp"
            android:text="서울시 새 소식"
            android:textSize="20dp">

        </Switch>

        <Switch
            android:id="@+id/switch_accumulate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:checked="true"
            android:paddingLeft="10dp"
            android:text="적립 알림"
            android:textSize="20dp">

        </Switch>

        <Switch
            android:id="@+id/switch_notice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:checked="true"
            android:paddingLeft="10dp"
            android:text="어플 공지사항"
            android:textSize="20dp">

        </Switch>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="도움"

            android:textSize="15dp" />

        <Button
            android:id="@+id/help_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="공지사항"
            android:textSize="20dp">

        </Button>

        <Button
            android:id="@+id/introduce_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="꿩먹알먹 사용 방법"
            android:textSize="20dp">

        </Button>

    </LinearLayout>

</ScrollView>